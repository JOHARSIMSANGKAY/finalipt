<Window x:Class="Sangkay.Supplier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Supplier List -->
        <DataGrid 
        Grid.Column="0"
        ItemsSource="{Binding Suppliers}" 
        SelectedItem="{Binding SelectedSupplier}"
        AutoGenerateColumns="False"
        Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="*" />
                <DataGridTextColumn Header="Contact" Binding="{Binding Contact}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Form -->
        <StackPanel Grid.Column="1" Margin="20">

            <TextBlock Text="Supplier Name" />
            <TextBox Text="{Binding Name}" Margin="0,5,0,15"/>

            <TextBlock Text="Address" />
            <TextBox Text="{Binding Address}" Margin="0,5,0,15"/>

            <TextBlock Text="Contact" />
            <TextBox Text="{Binding Contact}" Margin="0,5,0,15"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="New" Width="80" Margin="5" Command="{Binding NewCommand}" />
                <Button Content="Add" Width="80" Margin="5" Command="{Binding AddCommand}" />
                <Button Content="Update" Width="80" Margin="5" Command="{Binding UpdateCommand}" />
                <Button Content="Delete" Width="80" Margin="5" Command="{Binding DeleteCommand}" />
            </StackPanel>

        </StackPanel>
    </Grid>

</Window>